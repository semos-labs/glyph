{
  "name": "@nick-skriabin/glyph",
  "version": "0.1.0",
  "description": "A React renderer for terminal UIs with flexbox layout",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react-reconciler": "^0.31.0",
    "string-width": "^7.2.0",
    "yoga-layout": "^3.2.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-reconciler": "^0.28.9",
    "react": "^19.0.0",
    "tsup": "^8",
    "typescript": "^5.5"
  },
  "keywords": ["react", "terminal", "tui", "cli", "flexbox"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nick-skriabin/glyph.git"
  },
  "bugs": {
    "url": "https://github.com/nick-skriabin/glyph/issues"
  },
  "homepage": "https://github.com/nick-skriabin/glyph#readme"
}
